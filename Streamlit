import folium
import streamlit as st
from streamlit_folium import folium_static

def main():
    st.title("Mapa Interactivo de España")

    # Crear un objeto de mapa centrado en España
    mapa = folium.Map(location=[40.4637, -3.7492], zoom_start=6)

    # Renderizar el mapa en Streamlit usando "folium_static"
    folium_static(mapa)

if __name__ == "__main__":
    main()
