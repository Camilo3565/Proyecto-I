<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Leaflet Routing Machine Example</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.2.0/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder@1.13.0/dist/Control.Geocoder.css" />
    <style>
        #map {
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script src="https://unpkg.com/leaflet@1.2.0/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder@1.13.0/dist/Control.Geocoder.js"></script>
    <script>
        var map = L.map('map').setView([39.8283, -98.5795], 4); // Establecemos la vista del mapa en el centro de Estados Unidos

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map); // Añadimos la capa de teselas de OpenStreetMap al mapa

        L.Routing.control({
            
            routeWhileDragging: true,
            show: true, // Mostrar los waypoints en el mapa
            draggableWaypoints: false, // Deshabilitar la capacidad de arrastrar los waypoints
            geocoder: L.Control.Geocoder.nominatim() // Usar el servicio de geocodificación de Nominatim
        }).addTo(map); // Añadimos el control de enrutamiento al mapa
    </script>
</body>
</html>

